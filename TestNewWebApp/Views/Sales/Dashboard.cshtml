        var salesData = data.map(x => x.totalSales);

        // create a bar chart using the retrieved data
        var ctx = document.getElementById('salesChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: agentNames,
                datasets: [{
