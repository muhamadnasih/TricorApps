@model IEnumerable<DomainModel.SalesDomainModel>
@{ 
 
    ViewData["Title"] = "Sales Page";
}


<div class="text-center">
    <h1 class="display-4">Dashboard</h1>
    <p>Sales List</p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                Action
            </th>
         
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesDate)
                </td>
                <td>
                    RM @Html.DisplayFor(modelItem => item.Amount)
                </td>
                @*<td><a href="@Url.Action("Edit", "Sales", new { id = item.Id })" class="edit-person">Edit</a></td>
                <td><button type="button" class="btn btn-danger btn-delete" data-id="model.Id">Delete</button></td>*@
                <td>
                    <a href="@Url.Action("Edit", "Sales", new { id = item.Id })" class="btn btn-primary">Edit</a>
                    <button type="button" class="btn btn-danger btn-delete" data-id="@item.Id">Delete</button>
                </td>

            </tr>
        }

    </table>
</div>


<!-- Edit Sales Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editModalLabel">Edit Person</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
              @*  @Html.Partial("_EditSalesPartial")*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="edit-form" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
    <script>
        $(document).ready(function () {
            // Show edit modal when edit link is clicked
            $('.edit-person').click(function (event) {
                event.preventDefault();
                var url = $(this).attr('href');
                $.get(url, function (data) {
                    $('#editModal .modal-body').html(data);
                    $('#editModal').modal('show');
                });
            });

            // Handle form submit
            $('#edit-form').submit(function (event) {
                event.preventDefault();
                var url = $(this).attr('action');
                var data = $(this).serialize();
                $.ajax({
                    url: url,
                    type: 'POST',
                    data: data,
                    success: function (result) {
                        if (result.success) {
                            // Update table row with new data
                            var $tableRow = $('tr[data-id="' + result.id + '"]');
                            $tableRow.find('td:nth-child(1)').text(result.name);
                            $tableRow.find('td:nth-child(2)').text(result.age);
                            $tableRow.find('td:nth-child(3)').text(result.email);

                            // Hide modal
                            $('#editModal').modal('hide');
                        } else {
                            // Show error message
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong!',
                            });
                        }
                    },
                    error: function () {
                        // Show error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong!',
                        });
                    }
                });
            });
        });
    </script>

    <script>
        $(function () {
            $('.btn-delete').click(function () {
                var id = $(this).data('id');
                debugger;
                if (confirm('Are you sure you want to delete this record?')) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Delete", "Sales")',
                        data: { id: id },
                        success: function () {
                            // Reload the table
                            window.location.reload();
                        },
                        error: function () {
                            alert('An error occurred while deleting the record.');
                        }
                    });
                }
            });
        });
    </script>
}

