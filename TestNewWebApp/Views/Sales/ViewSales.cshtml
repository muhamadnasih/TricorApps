@model IEnumerable<DomainModel.SalesDomainModel>
@{ 
 
   
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

  


<div class="text-center">
    <h1 class="display-4">Sales</h1>
    <p>Sales List</p>   
</div>
<a href="@Url.Action("CreateSales", "Sales")" class="btn btn-primary">Create New Sale</a>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <table id="myTable" class="table table-bordered table-striped">
         <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.SalesItem)</th>
            <th>@Html.DisplayNameFor(model => model.SalesDate)</th>
            <th>  @Html.DisplayNameFor(model => model.Amount)</th>
            <th>Action</th>
        </tr>
    </thead>
   <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesDate)
                </td>
                <td>
                    RM @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Sales", new { id = item.Id })" class="btn btn-primary">Edit</a>
                     <button type="button" class="btn btn-danger btn-delete" data-id="@item.Id">Delete</button>
                </td>

            </tr>
        }
        </tbody>
    </table>
</div>


<!-- Edit Sales Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editModalLabel">Edit Person</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
              @*  @Html.Partial("_EditSalesPartial")*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="edit-form" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- delete confirmation modal -->
<div class="modal" id="deleteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this record?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="deleteButton">Delete</button>
      </div>
    </div>
  </div>
</div>



@section scripts {
     
  
    <script>
        $(document).ready(function () {
            let table = new DataTable('#myTable');
            // Show edit modal when edit link is clicked
            $('.edit-person').click(function (event) {
                event.preventDefault();
                var url = $(this).attr('href');
                $.get(url, function (data) {
                    $('#editModal .modal-body').html(data);
                    $('#editModal').modal('show');
                });
            });

            // Handle form submit
            $('#edit-form').submit(function (event) {
                event.preventDefault();
                var url = $(this).attr('action');
                var data = $(this).serialize();
                $.ajax({
                    url: url,
                    type: 'POST',
                    data: data,
                    success: function (result) {
                        if (result.success) {
                            // Update table row with new data
                            var $tableRow = $('tr[data-id="' + result.id + '"]');
                            $tableRow.find('td:nth-child(1)').text(result.name);
                            $tableRow.find('td:nth-child(2)').text(result.age);
                            $tableRow.find('td:nth-child(3)').text(result.email);

                            // Hide modal
                            $('#editModal').modal('hide');
                        } else {
                            // Show error message
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong!',
                            });
                        }
                    },
                    error: function () {
                        // Show error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong!',
                        });
                    }
                });
            });
        });
    </script>

    <script>
        $(function () {
            $('.btn-delete').click(function () {
                var id = $(this).data('id');
                debugger;
                if (confirm('Are you sure you want to delete this record?')) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Delete", "Sales")',
                        data: { id: id },
                        success: function () {
                            // Reload the table
                            window.location.reload();
                        },
                        error: function () {
                            alert('An error occurred while deleting the record.');
                        }
                    });
                }
            });
        });
    </script>
   
}

