@model TestNewWebApp.Models.SalesViewModel



    <div class="modal-body">
    <form id="editsales-form" method="post">
        @Html.AntiForgeryToken()
            <div class="form-group">
            @Html.HiddenFor(model => model.SalesId)
            @Html.LabelFor(model => model.SalesItem, htmlAttributes: new { @class = "control-label col-md-2" })                   
            @Html.EditorFor(model => model.SalesItem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SalesItem, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
            @Html.LabelFor(model => model.SalesDate, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.SalesDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SalesDate, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>

        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" form="editsales-form" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-primary" onclick="submitSales()">Submit</button>
    </form>
    </div>
